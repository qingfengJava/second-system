<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qingfeng.dao.CheckMapper">
    <resultMap id="BaseResultMap" type="com.qingfeng.entity.Check">
        <id column="checkId" jdbcType="INTEGER" property="checkid"/>
        <result column="check_user_id" jdbcType="INTEGER" property="checkUserId"/>
        <result column="activeId" jdbcType="INTEGER" property="activeid"/>
        <result column="userId" jdbcType="INTEGER" property="userid"/>
        <result column="active_img" jdbcType="VARCHAR" property="activeImg"/>
        <result column="active_summary" jdbcType="VARCHAR" property="activeSummary"/>
        <result column="check_time" jdbcType="TIMESTAMP" property="checkTime"/>
        <result column="check_content" jdbcType="VARCHAR" property="checkContent"/>
        <result column="is_pass" jdbcType="INTEGER" property="isPass"/>
        <result column="is_delete" jdbcType="INTEGER" property="isDelete"/>
    </resultMap>

    <select id="selectByApplyId" resultMap="BaseResultMap">
        SELECT checkId,
               check_user_id,
               activeId,
               userId,
               active_img,
               active_summary,
               check_time,
               check_content,
               is_pass,
               is_delete
        FROM `check`
        WHERE activeId = #{applyId}
          and is_delete = 0
    </select>
</mapper>