<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qingfeng.dao.OrganizeMapper">
    <resultMap id="BaseResultMap" type="com.qingfeng.entity.Organize">
        <id column="organize_id" jdbcType="INTEGER" property="organizeId"/>
        <result column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="organize_name" jdbcType="VARCHAR" property="organizeName"/>
        <result column="organize_department" jdbcType="VARCHAR" property="organizeDepartment"/>
        <result column="organize_introduce" jdbcType="VARCHAR" property="organizeIntroduce"/>
        <result column="main_url" jdbcType="VARCHAR" property="mainUrl"/>
        <result column="birth_time" jdbcType="TIMESTAMP" property="birthTime"/>
        <result column="is_delete" jdbcType="INTEGER" property="isDelete"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>

    <!-- 根据用户Id查询对应的社团组织信息 -->
    <select id="selectOrganizeByUserId" resultMap="BaseResultMap">
        select organize_id,
               user_id,
               organize_name,
               organize_department,
               organize_introduce,
               main_url,
               birth_time,
               is_delete,
               create_time,
               update_time
        from organize
        where user_id = #{uid}
    </select>

    <resultMap id="resultOrganizeVoMap" type="com.qingfeng.vo.OrganizeVo">
        <id column="organize_id" jdbcType="INTEGER" property="organizeId"/>
        <result column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="organize_name" jdbcType="VARCHAR" property="organizeName"/>
        <result column="organize_department" jdbcType="VARCHAR" property="organizeDepartment"/>
        <result column="organize_introduce" jdbcType="VARCHAR" property="organizeIntroduce"/>
        <result column="main_url" jdbcType="VARCHAR" property="mainUrl"/>
        <result column="birth_time" jdbcType="TIMESTAMP" property="birthTime"/>
        <result column="is_delete" jdbcType="INTEGER" property="isDelete"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>

        <collection property="organizeImg" select="com.qingfeng.dao.OrganizeImgMapper.selectOrganizeImgByOrganizationId"
                    column="organize_id"/>
    </resultMap>

    <select id="checkOrganizeInfo" resultMap="resultOrganizeVoMap">
        select organize_id,
               user_id,
               organize_name,
               organize_department,
               organize_introduce,
               main_url,
               birth_time,
               is_delete,
               create_time,
               update_time
        from organize
        where user_id = #{uid}
          and is_delete = 0;
    </select>

    <select id="queryByIsAdmin" resultMap="BaseResultMap">
        select organize.organize_id,
               organize.user_id,
               organize.organize_name,
               organize.organize_department,
               organize.organize_introduce,
               organize.main_url,
               organize.birth_time,
               organize.is_delete,
               organize.create_time,
               organize.update_time
        from organize left join tb_users on organize.user_id = tb_users.uId
        where tb_users.is_admin = #{isAdmin}
          and organize.is_delete = 0
    </select>
</mapper>