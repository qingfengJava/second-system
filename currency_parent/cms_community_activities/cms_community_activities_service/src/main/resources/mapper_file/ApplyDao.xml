<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qingfeng.cms.biz.apply.dao.ApplyDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.qingfeng.cms.domain.apply.entity.ApplyEntity" id="applyMap">
        <result property="id" column="id"/>
        <result property="applyUserId" column="apply_user_id"/>
        <result property="activeName" column="active_name"/>
        <result property="activeScale" column="active_scale"/>
        <result property="activeType" column="active_type"/>
        <result property="activeLevel" column="active_level"/>
        <result property="activePrincipal" column="active_principal"/>
        <result property="activeStartTime" column="active_start_time"/>
        <result property="activeEndTime" column="active_end_time"/>
        <result property="registrationDeadTime" column="registration_dead_time"/>
        <result property="isQuota" column="is_quota"/>
        <result property="quotaNum" column="quota_num"/>
        <result property="year" column="year"/>
        <result property="schoolYear" column="school_year"/>
        <result property="isBonusPointsApply" column="is_bonus_points_apply"/>
        <result property="bonusFile" column="bonus_file"/>
        <result property="activeScore" column="active_score"/>
        <result property="activeIntroduction" column="active_introduction"/>
        <result property="activeContent" column="active_content"/>
        <result property="activeApplyTime" column="active_apply_time"/>
        <result property="agreeStatus" column="agree_status"/>
        <result property="activeStatus" column="active_status"/>
        <result property="isRelease" column="is_release"/>
        <result property="createTime" column="create_time"/>
        <result property="createUser" column="create_user"/>
        <result property="updateTime" column="update_time"/>
        <result property="updateUser" column="update_user"/>
    </resultMap>

    <select id="findList" resultMap="applyMap">
        SELECT *
        FROM ca_apply
        WHERE apply_user_id = #{userId}
        <if test="applyQueryDTO.activeName != null and applyQueryDTO.activeName != ''">
            and active_name like concat('%',#{applyQueryDTO.activeName},'%')
        </if>
        <if test="applyQueryDTO.year != null and applyQueryDTO.year != 0">
            and year = #{applyQueryDTO.year}
        </if>
        <if test="applyQueryDTO.activeLevel != null">
            and active_level = #{applyQueryDTO.activeLevel}
        </if>
        <if test="applyQueryDTO.activeStartTime != null">
            and active_start_time &gt;= #{applyQueryDTO.activeStartTime}
        </if>
        <if test="applyQueryDTO.activeEndTime != null">
            and active_end_time &lt;= #{applyQueryDTO.activeEndTime}
        </if>
        ORDER BY
        CASE
            agree_status
            WHEN '${@com.qingfeng.cms.domain.apply.enums.AgreeStatusEnum@INIT.name}' THEN 1
            WHEN '${@com.qingfeng.cms.domain.apply.enums.AgreeStatusEnum@IS_NOT_PASSED.name}' THEN 2
            ELSE 3
            END,
        CASE
            active_status
            WHEN '${@com.qingfeng.cms.domain.apply.enums.ActiveStatusEnum@INIT.name}' THEN 1
            WHEN '${@com.qingfeng.cms.domain.apply.enums.ActiveStatusEnum@HAVING.name}' THEN 2
            WHEN '${@com.qingfeng.cms.domain.apply.enums.ActiveStatusEnum@COMPLETE.name}' THEN 3
            ELSE 4
            END,
        create_time desc
        LIMIT #{applyQueryDTO.pageNo}, #{applyQueryDTO.pageSize}
    </select>


</mapper>