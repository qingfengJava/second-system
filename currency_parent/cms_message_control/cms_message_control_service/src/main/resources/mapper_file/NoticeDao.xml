<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qingfeng.cms.biz.notice.dao.NoticeDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.qingfeng.cms.domain.notice.entity.NoticeEntity" id="noticeMap">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="title" column="title"/>
        <result property="publicName" column="public_name"/>
        <result property="content" column="content"/>
        <result property="readNum" column="read_num"/>
        <result property="createTime" column="create_time"/>
        <result property="createUser" column="create_user"/>
        <result property="updateTime" column="update_time"/>
        <result property="updateUser" column="update_user"/>
    </resultMap>

    <select id="selectNoticeList"
            resultType="com.qingfeng.cms.domain.notice.entity.NoticeEntity">
        select *
        from mc_notice
        where user_id = #{userId}
        <if test="noticeQueryDTO.title != null and noticeQueryDTO.title != '' ">
            and title like concat('%', #{noticeQueryDTO.title},'%')
        </if>
        order by update_time desc
        limit #{noticeQueryDTO.pageNo}, #{noticeQueryDTO.pageSize}
    </select>


    <select id="selectNoticeListByUserIds"
            resultType="com.qingfeng.cms.domain.notice.entity.NoticeEntity">
        select *
        from mc_notice
        where user_id in
        <foreach collection="userIds" item="item" index="index" open="(" close=")" separator=",">
            #{item}
        </foreach>
        order by update_time desc
        limit #{noticeQueryDTO.pageNo}, #{noticeQueryDTO.pageSize}
    </select>


</mapper>